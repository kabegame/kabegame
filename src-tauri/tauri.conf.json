{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kabegame",
  "version": "1.1.2",
  "identifier": "com.kabegame",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "pnpm run build:frontend",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kabegame",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      },
      {
        "label": "plugin-editor",
        "title": "Kabegame Plugin Editor",
        "url": "plugin-editor.html",
        "width": 1100,
        "height": 760,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.ico"],
    "externalBin": ["bin/kabegame-cli", "bin/kabegame-plugin-editor"],
    "resources": ["resources/plugins"],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh",
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
