{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Main capability for the application",
  "windows": ["main", "wallpaper", "wallpaper-debug", "plugin-editor"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "shell:default",
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$LOCALDATA/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    },
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}
