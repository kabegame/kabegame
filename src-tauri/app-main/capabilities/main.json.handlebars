{
  "identifier": "main-capability",
  "description": "Main capability for Kabegame (workspace app-main)",
  "local": true,
  "windows": [{{#if isWindows}}"wallpaper", {{/if}}"main"],
  "permissions": [
    "core:default",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "core:window:allow-set-always-on-top",
    "dialog:default",
    "shell:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    {"identifier": "fs:allow-read-file", "allow": [{"path": "**"}]},
    {{#if isAndroid}}
    "picker:default",
    {{/if}}
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text"
  ]
}
