{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kabegame",
  "version": "3.0.4",
  "identifier": {{#if isAndroid}}"app.kabegame"{{else}}"Kabegame"{{/if}},
  "build": {
    "beforeDevCommand": "bun run dev:frontend-main",
    "devUrl": "http://{{devServerHost}}:1420",
    "frontendDist": "../../dist-main"
  },
  "app": {
    {{#if isMacOS}}
    "macOSPrivateApi": true,
    {{/if}}
    {{!-- 注意：安卓也必须有 windows 配置，否则白屏 --}}
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kabegame",
        "devtools": {{isDev}},
        {{#if isLinux}}
        "transparent": false,
        "width": 1600,
        "height": 1200,
        "minWidth": 1200,
        "minHeight": 800
        {{else}}
        "transparent": true,
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600{{#if isWindowEffect}},
        "windowEffects": { "effects": ["sidebar", "acrylic"], "state": "followsWindowActiveState" }
        {{/if}}
        {{/if}}
      }
    ],
    "security": {
      "capabilities": ["main-capability"],
      "csp": "default-src 'self' ipc: http://ipc.localhost{{#if isAndroid}} http://{{devServerHost}}:1420 http://10.0.2.2:1420 http://localhost:1420{{/if}}; img-src 'self' asset: http://asset.localhost data: blob:; media-src 'self' asset: http://asset.localhost data: blob:; connect-src 'self' ipc: http://ipc.localhost ws: wss:{{#if isAndroid}} http://{{devServerHost}}:1420 http://10.0.2.2:1420 http://localhost:1420{{/if}}; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; font-src 'self' data:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    {{#unless isAndroid}}
    "targets": [
      {{#if isWindows}}"nsis"{{else if isMacOS}}"dmg"{{else if isLinux}}"deb"{{/if}}
    ],
    {{/unless}}
    "icon": ["../icons/icon.png", "../icons/icon.ico"],
    {{!-- 只有非linux平台需要文件关联，linux用手动关联 desktop 文件 --}}
    {{#unless isLinux}}
    "fileAssociations": [
      {
        "ext": ["kgpg"],
        "name": "Kabegame Plugin Package",
        "description": "Kabegame Plugin Package",
        "role": "Viewer",
        "mimeType": "application/x-kabegame-kgpg"
      }
    ],
    {{/unless}}

    "resources": ["resources/**/*"],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh",
        "languages": ["SimpChinese"],
        "installerIcon": "../icons/icon.ico"
      }
    },
    "macOS": {
      "dmg": {
        "background": "dmg/background.jpg"
      }
    },
    "linux": {
      "deb": {
        "depends": [{{#unless isLight}}"fuse3", {{/unless}}"libayatana-appindicator3-1"],
        "files": {
          {{#unless isLight}}
          "/usr/bin/kabegame-cli": "../../target/release/kabegame-cli",
          {{/unless}}
          "/usr/share/mime/packages/kabegame-kgpg.xml": "./deb/kabegame-kgpg.xml",
          "/usr/share/icons/hicolor/256x256/mimetypes/application-x-kabegame-kgpg.png": "../icons/icon.png"
        },
        "desktopTemplate": "./deb/kabegame.desktop",
        "postInstallScript": "./deb/postinst.sh",
        "postRemoveScript": "./deb/postrm.sh",
        "provides": ["kabegame"],
        "conflicts": ["kabegame"],
        "replaces": ["kabegame"]
      }
    }
  }
}
