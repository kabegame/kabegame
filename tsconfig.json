{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/main/src/*", "apps/plugin-editor/src/*"],
      "@kabegame/core/*": ["packages/core/src/*"],
      "@kabegame/core/stores/*": ["packages/core/src/stores/*"]
    }
  },
  "include": [
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.d.ts",
    "apps/**/src/**/*.tsx",
    "apps/**/src/**/*.vue",
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/src/**/*.tsx",
    "packages/**/src/**/*.vue"
  ]
}
